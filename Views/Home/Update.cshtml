@model ApplicationUser
@{
    ViewData["Title"] = "Update";
}


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">


<div class="text-center m-4">
    <h2 class="text-dark">Update Information </h2>
    <hr />
</div>

<form class="m-4 p-1" asp-action="Update" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Id">Id</label>
        <input asp-for="Id" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" placeholder="enter your mail address" />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input name="Password" class="form-control" type="password" />
    </div>

    <input type="submit" class="btn btn-success" value="Submit" />
    <a asp-action="UserL" class="btn btn-danger"> Cancel</a>
</form>